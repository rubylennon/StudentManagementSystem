<!--user update form-->
<%= form_with(model: user, local: true) do |form| %>

    <!--  print any user update errors -->
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(user.errors.count, "error") %>
          prohibited this user from being saved:
        </h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- first name form text field -->
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <!-- last name form text field -->
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <!-- dob form text field -->
    <div class="form-group">
      <%= form.label :dob %>
      <%= form.text_field :dob, class: 'form-control' %>
    </div>

    <!-- pps form text field -->
    <div class="form-group">
      <%= form.label :pps_number %>
      <%= form.text_field :pps_number, class: 'form-control' %>
    </div>

    <!-- address form text field -->
    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control' %>
    </div>

    <!-- contact number form text field -->
    <div class="form-group">
      <%= form.label :contact_number %>
      <%= form.number_field :contact_number, class: 'form-control' %>
    </div>

    <!-- contact name form text field -->
    <div class="form-group">
      <%= form.label :emergency_contact_name %>
      <%= form.text_field :emergency_contact_name, class: 'form-control' %>
    </div>

    <!-- contact number form text field -->
    <div class="form-group">
      <%= form.label :emergency_contact_number %>
      <%= form.number_field :emergency_contact_number, class: 'form-control' %>
    </div>

    <br>

    <!-- form submit and cancel buttons -->
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', root_path, class: 'btn btn-secondary' %>
    </div>

  </div>
<% end %>
